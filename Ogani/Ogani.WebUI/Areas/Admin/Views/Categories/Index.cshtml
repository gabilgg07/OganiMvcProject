@model IEnumerable<Ogani.WebUI.Models.Entity.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <ul class="breadcrumb">
        <li>
            <p>Admin</p>
        </li>
        <li><a href="#" class="active">Categories</a> </li>
    </ul>
    <div class="page-title">
        <i class="icon-custom-left"></i>
        <h3>Admin- Home</h3>
    </div>


    <div class="row-fluid">
        <div class="span12 w-60">
            <div class="grid simple ">
                <div class="grid-body ">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th class="text-center w-25">
                                    <a asp-action="Create" class="btn btn-primary btn-cons"><i class="fa fa-plus-circle"></i></a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="vertical-middle">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="text-center vertical-middle">
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-default btn-cons min-w-0 mb-0"><i class="fa fa-pencil"></i></a>
                                            <a asp-action="details" asp-route-id="@item.Id" class="btn btn-info btn-cons min-w-0 mb-0"><i class="fa fa-info-circle"></i></a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-cons min-w-0 mb-0"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


