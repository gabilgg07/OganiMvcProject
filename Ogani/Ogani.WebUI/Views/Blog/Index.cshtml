@model PagedViewModel<Blog>
@{
    ViewBag.Title = "Blog Index";
    IEnumerable<BlogTag> blogTags = ViewBag.BlogTags;
}


<section class="breadcrumb-section set-bg" data-setbg="assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Blog</h2>
                    <div class="breadcrumb-option">
                        <a asp-controller="home" asp-action="index">Home</a>
                        <span>Blog</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="blog-sidebar">
                    <div class="blog-sidebar-search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog-sidebar-item">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="#">All</a></li>
                            <li><a href="#">Beauty (20)</a></li>
                            <li><a href="#">Food (5)</a></li>
                            <li><a href="#">Life Style (9)</a></li>
                            <li><a href="#">Travel (10)</a></li>
                        </ul>
                    </div>
                    <div class="blog-sidebar-item">
                        <h4>Recent News</h4>
                        <div class="blog-sidebar-recent">
                            <a href="#" class="blog-sidebar-recent-item">
                                <div class="blog-sidebar-recent-item-pic">
                                    <img src="assets/img/blog/sidebar/sr-1.jpg" alt="">
                                </div>
                                <div class="blog-sidebar-recent-item-text">
                                    <h6>09 Kinds Of Vegetables<br /> Protect The Liver</h6>
                                    <span>MAR 05, 2019</span>
                                </div>
                            </a>
                            <a href="#" class="blog-sidebar-recent-item">
                                <div class="blog-sidebar-recent-item-pic">
                                    <img src="assets/img/blog/sidebar/sr-2.jpg" alt="">
                                </div>
                                <div class="blog-sidebar-recent-item-text">
                                    <h6>Tips You To Balance<br /> Nutrition Meal Day</h6>
                                    <span>MAR 05, 2019</span>
                                </div>
                            </a>
                            <a href="#" class="blog-sidebar-recent-item">
                                <div class="blog-sidebar-recent-item-pic">
                                    <img src="assets/img/blog/sidebar/sr-3.jpg" alt="">
                                </div>
                                <div class="blog-sidebar-recent-item-text">
                                    <h6>4 Principles Help You Lose <br />Weight With Vegetables</h6>
                                    <span>MAR 05, 2019</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="blog-sidebar-item">
                        <h4>Search By</h4>
                        <div class="blog-sidebar-item-tags">
                            @if (blogTags != null)
                            {
                                @foreach (var bt in blogTags)
                                {
                                    <a asp-action="index" asp-route-tagId="@bt.Id">@bt.Name</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="row">
                    @foreach (var item in Model.Items)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog-item">
                                <div class="blog-item-pic">
                                    <img src="~/uploads/images/blogs/@item.ImagePath" alt="@item.Title">
                                </div>
                                <div class="blog-item-text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i> @item.WrotedDate.ToString("MMM dd,yyyy")</li>
                                        <li><i class="fa fa-comment-o"></i> @item.Comments.Count()</li>
                                    </ul>
                                    <h5><a asp-action="details" asp-route-id="@item.Id">@item.Title</a></h5>
                                    <p>
                                        @item.Description
                                    </p>
                                    <a asp-action="details" asp-route-id="@item.Id" class="blog-btn">READ MORE <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-lg-12">
                        @Model.GetPagination(Url, "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>