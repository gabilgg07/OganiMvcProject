@{
    string title = ViewBag.Title??"";
}
<ul>
    <li class="@(title.ToLower().Contains("home")?"active":"")"><a asp-controller="home" asp-action="index">Home</a></li>
    <li class="@(title.ToLower().Contains("shop")?"active":"")"><a asp-controller="Shop" asp-action="index">Shop</a></li>
    <li class="@(title.ToLower().Contains("blog")?"active":"")"><a asp-controller="blog" asp-action="index">Blog</a></li>
    <li class="@(title.ToLower().Contains("contact")?"active":"")"><a asp-controller="home" asp-action="contact">Contact</a></li>
</ul>

